[Unit]
Description=PEPEW Light API
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/pepew-api
Environment=NODE_ENV=production
EnvironmentFile=/home/ubuntu/pepew-api/.env
ExecStart=/usr/bin/node dist/index.js
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
